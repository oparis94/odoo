<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<!--    tree view of Appointment model-->
    <record id="appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name_seq"/>
                <field name="patient_id"/>
                <field name="patient_age" sum="Total Of Ages"/>
<!--                <field name="patient_age" avg="Average Of Ages"/>-->
                <field name="appointment_date"/>
                <field name="notes"/>
            </tree>
        </field>
    </record>
<!--    form view of Appointment model-->
    <record id="appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointments">
                <header>
                    <button name="action_confirm" type="object" string="Confirm" states="draft" class="oe_highlight"/>
                    <button name="action_done" type="object" string="Done" states="confirm" class="oe_highlight"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name_seq"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id"/>
                        </group>
                        <group>
                            <field name="patient_age"/>
                            <field name="appointment_date"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                    <notebook>
                        <page string="Doctor Prescription">
                            <field name="appointment_lines">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="product_qty"/>
                                    <field name="appointment_id" invisible="1"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="product_id"/>
                                        </group>

                                        <group>
                                            <field name="product_qty"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Pharmacy">
                            <group>
                                <field name="pharmacy_note"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

<!--    action appointment menu-->
    <record id="action_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
<!--    menu-->
    />
    <menuitem id="hospital_appointment"
              name="Appointments"
              parent="hospital_root"
              action="action_appointment"
    />
</odoo>